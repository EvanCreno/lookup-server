SET SQL_MODE = "NO_AUTO_VALUE_ON_ZERO";
SET time_zone = "+00:00";

CREATE TABLE IF NOT EXISTS `user` (
  `userid` bigint,
  `authkey` varchar(255) NOT NULL DEFAULT '',
  `federationid` varchar(255) NOT NULL DEFAULT '',
  `name` varchar(255) NOT NULL DEFAULT '',
  `email` varchar(255) NOT NULL DEFAULT '',
  `emailstatus` int NOT NULL DEFAULT 0,
  `organisation` varchar(255) NOT NULL DEFAULT '',
  `country` varchar(255) NOT NULL DEFAULT '',
  `city` varchar(255) NOT NULL DEFAULT '',
  `picture` text NOT NULL DEFAULT '',
  `vcard` text NOT NULL DEFAULT '',
  `created` int NOT NULL DEFAULT 0,
  `changed` int NOT NULL DEFAULT 0,
  `localchange` int NOT NULL DEFAULT 0,
  `karma` int NOT NULL DEFAULT 0,
  PRIMARY KEY (`userid`),
  KEY `userid` (`userid`,`karma`),
  KEY `authkey` (`authkey`),
  KEY `email` (`email`, `karma`),
  KEY `email2` (`email`, `authkey`),
  KEY `karma` (`localchange`,`changed`),
  FULLTEXT KEY `FullText` (`name`,`email`,`organisation`,`country`,`city`)
) ENGINE=MyISAM  DEFAULT CHARSET=latin1 AUTO_INCREMENT=1 ;


CREATE TABLE `apitraffic` (
  `ip` bigint(20) NOT NULL,
  `count` int(11) NOT NULL,
  PRIMARY KEY (`ip`)
) ENGINE=MyISAM DEFAULT CHARSET=latin1;
